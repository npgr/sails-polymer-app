<dom-module id="Task-dashboard">

  <template>
    <style>

	.chart_group {
		display: flex;
		margin-left: 10px;
	}
	app-chart-vbar, app-chart-pie {
		//margin-left: 30px;
	}
    </style>
	<iron-ajax id="ajax" handle-as="json" on-response="load_data" on-error="ajax_error"></iron-ajax>
	<br><br>
		<br>
		<div class="chart_group">
		  <app-card>
			<div class="card__title"><iron-icon icon="arrow-drop-down"></iron-icon><%= lng("Activities by Status")%> <input></input></div>
			<app-chart-vbar id="vbar1" width=550></app-chart-vbar>
			<app-chart-pie id="pie1"></app-chart-pie>
		  </app-card>
		</div>
		<br>
		<div class="chart_group">
		  <app-card>
		     <div class="card__title"><iron-icon icon="arrow-drop-down"></iron-icon><%= lng("Activities by Type")%></div>
			<app-chart-vbar id="vbar2" width=400></app-chart-vbar>
			<app-chart-pie id="pie2"></app-chart-pie>
		  </app-card>
		</div>
		<br>
		<div class="chart_group">
		  <app-card>
			<div class="card__title"><iron-icon icon="arrow-drop-down"></iron-icon><%= lng("Activities by Priority")%></div>
			<app-chart-vbar id="vbar3" width=400></app-chart-vbar>
			<app-chart-pie id="pie3"></app-chart-pie>
		  </app-card>
		</div>
		<br>
  </template>
  <script>
    Polymer({
		is: "Task-dashboard",
		properties: {
			data: {
				type: String,
				value: ""
			},
			width: {
				type: Number,
				value: 300,
			}
		},
		ready: function() { 
			this.$.ajax.url = config_server() + "Task/cube"
			this.$.ajax.generateRequest()
		},
		getStatus: function(status) {
			switch(status) {
			  case "p":
					return "<%= lng("Pending")%>"
			  case "l":
					return "<%= lng("Planning")%>"
			  case "e":
					return "<%= lng("Working on")%>"
			  case "s":
					return "<%= lng("Stand by")%>"
			  case "c":
					return "<%= lng("Certificate")%>"
			  case "x":
					return "<%= lng("Close")%>"
			  default:
					return "<%= lng("Other")%>"
			}
		},
		getType: function(type) {
			switch(type) {
			  case "i":
					return "<%= lng("Incident")%>"
			  case "t":
					return "<%= lng("Task")%>"
			  case "c":
					return "<%= lng("Change")%>"
			  case "p":
					return "<%= lng("Project")%>"
			  default:
					return "<%= lng("Other")%>"
			}
		},
		getPriority: function(priority) {
			switch(priority) {
			  case "b":
					return "<%= lng("Low")%>"
			  case "m":
					return "<%= lng("Medium")%>"
			  case "a":
					return "<%= lng("Hight")%>"
			  case "c":
					return "<%= lng("Critic")%>"
			  default:
					return "<%= lng("Other")%>"
			}
		},
		load_data: function() {
			var datai = _.sortBy(this.$.ajax.lastResponse, 'status')
			var data = []
			var color = ['#1E88E5', '#009688', 'orange','#F44336', '#AB47BC', '#795548']
			var dato = {}
			var status = ''
			var j = 0
			for (i=0; i< datai.length; i++)
			{
				if (datai[i].status != status && i != 0)
					data.push(dato)
				if (datai[i].status != status)
				{
					dato = {data: Number(datai[i].n),
							color: color[j],
							label: this.getStatus(datai[i].status)
					}
					j++
				}
				 else
					dato.data += Number(datai[i].n)
				if (i == (datai.length - 1))
					data.push(dato)
				status = datai[i].status
			}
			this.$.vbar1.data = data
			this.$.vbar1.paint()
			this.$.pie1.data = data
			this.$.pie1.paint()
			
			var datai = _.sortBy(this.$.ajax.lastResponse, 'type')
			var data = []
			var dato = {}
			var type = ''
			var j = 0
			for (i=0; i< datai.length; i++)
			{
				if (datai[i].type != type && i != 0)
					data.push(dato)
				if (datai[i].type != type)
				{
					dato = {data: Number(datai[i].n),
							color: color[j],
							label: this.getType(datai[i].type)
					}
					j++
				}
				 else
					dato.data += Number(datai[i].n)
				if (i == (datai.length - 1))
					data.push(dato)
				type = datai[i].type
			}
			this.$.vbar2.data = data
			this.$.vbar2.paint()
			this.$.pie2.data = data
			this.$.pie2.paint()
			
			var datai = _.sortBy(this.$.ajax.lastResponse, 'priority')
			var data = []
			var dato = {}
			var priority = ''
			var j = 0
			for (i=0; i< datai.length; i++)
			{
				if (datai[i].priority != priority && i != 0)
					data.push(dato)
				if (datai[i].priority != priority)
				{
					dato = {data: Number(datai[i].n),
							color: color[j],
							label: this.getPriority(datai[i].priority)
					}
					j++
				}
				 else
					dato.data += Number(datai[i].n)
				if (i == (datai.length - 1))
					data.push(dato)
				priority = datai[i].priority
			}
			this.$.vbar3.data = data
			this.$.vbar3.paint()
			this.$.pie3.data = data
			this.$.pie3.paint()	
		}
	})
  </script>
</dom-module>

<top-bar><%= lng("Activity Dashboard")%></top-bar>

<Task-dashboard></Task-dashboard>
