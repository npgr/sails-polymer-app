<!-- login template: version 1.00 -->
 <% 
 function lng(word) {
	return __("word")
 }
 function lng(word1, word2, word3) {
	return __(word1, word2, word3)
 }
%> 
<html>
<head>
 <!--<link rel="prerender" href="/styles/app.css"  as="stylesheet" probability="1.0"/>-->
<style>
	html {
		//background-color: rgb(240, 215, 240);
		background-color: rgba(165, 205, 235, .8); 
	}
	#loginCard {
		position: absolute;
		top: 30%;
		left: 30%;
		display: block;
		padding: 40px 60px 25px;
		background-color: rgb(170, 230, 170);
		border-radius: 8px;
		box-shadow: 5px 5px 8px #909090;
		background-color: whitesmoke;
		//opacity: .88;
	}
	#loginError {
		color: red;		
	}
	form {
		display: flex;
		flex-direction: column;
	}
	input {
		border-radius: 1px;
		padding: 6px;
		margin: 3px;
	}
	#btn {
		color: white;
		//background-color: #EBA646;
		background-color: lightseagreen;
		padding: 9;
		border-radius: 6px;
		font-weight: bold;
	}
	#usr, #pwd {
		border-radius: 6px;
	}
</style>
<title>Login</title>
</head>
<body>
	<script>
	  if (window.location.protocol != "https:")
		window.location.href = "https:" + window.location.href.substring(window.location.protocol.length);
	</script>
	 <div id="loginCard">
	  <form action="/validateLogin" method="post">
		<%= lng('prueba') %>
		<input id="usr" type="string" name="username" placeholder="<%= lng('Username') %>">
		<input id="pwd" type="password" name="password" placeholder="<%= lng('Password') %>">
		<input id="btn" type="submit" value="<%= lng('Login') %>">
	  </form>
	  <% if (flash.err) {%>
	 <div id="loginError"><%= flash.err %></div>
	 <% } %>
	 </div>
	 
</body>
</html>